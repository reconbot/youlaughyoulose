<div class="container">
  <div class="row btnrow">
    <h1 class="title">You Laugh, You Lose</h1>
  </div>
</div>

<div id="game" class="container">
  <div class="row viewport">
    <div class="loading">
      <h1>Give me your webcam!</h1>
    </div>
    <video class="js-video hide" width="640" height="480" autoplay></video>
    <canvas class="js-countdown countdown hide" width="640" height="480"></canvas>
    <canvas class="js-canvas hide" width="640" height="480"></canvas>
    <img class="js-funny-image funny-image hide" />
  </div>
  <div class="row btnrow">
    <button class="js-ready readybtn btn">Play the Game</button>
  </div>
</div>


<script type="text/javascript">
run = function(){

  var socket = window.socket = io.connect();

  var camera = window.camera = new APP.Camera({
      video: $('.js-video').get(0)
    , canvas: $('.js-canvas').get(0)
  });

  var game = window.game = new APP.Game({
      el: $('#game')
    , camera: camera
    , socket: socket
    , pictureURLs: {{{pictureURLs}}}

  });

};
</script>
